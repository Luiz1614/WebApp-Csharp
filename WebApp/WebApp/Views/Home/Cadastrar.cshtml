@model AulaModel

<div class="text-center">
    <h1 class="display-4">Cadastrar</h1>
    <p>Insira os dados abaixo para cadastrar um aluno</p>

    <form asp-action="Cadastrar">
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Turma" class="control-label"></label>
            <input asp-for="Turma" class="form-control" />
            <span asp-validation-for="Turma" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Cadastrar" class="btn btn-primary" />
        </div>
    </form>
</div>
